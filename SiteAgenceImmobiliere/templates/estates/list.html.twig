{% extends 'base.html.twig' %}

{% block title %}Liste des biens{% endblock %}

{% block body %}

<div class="container mt-3 text-center">
    <h1>Liste des biens</h1>
</div>

<div class="row flex">
    {% for estate in estates %}
        <div class="col-4">
            <div class="card">
                <div class= "card-body">
                    <h5 class="card-title">
                        <a href="{{ path('estateShow', {id: estate.id, slug: estate.slug}) }}">{{ estate.title}}</a>
                    </h5>
                    <p class="card-text">{{ estate.city}} ({{estate.postalCode}})</p>
                    <div class="text-primary" style="font-weight: bold; font-size: 2rem;">{{ estate.formattedPrice}} â‚¬</div>
                </div>
            </div>
        </div>
    {% endfor %}
</div>

{% endblock %}
